@model IEnumerable<finaltest.Areas.Admin.Models.HDX>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/_Admin.cshtml";
}

<div id="sidebar-collapse" class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
    </div>
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="http://localhost:51363/Admin/Admin/Index"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
            <li class="active">Hóa đơn xuất</li>
        </ol>
    </div><!--row-->
    <h3><span id="message"></span></h3>
    <div class="row">
        <div class="col-lg-12">
            <form action="" method="post">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <div class="col-md-8">Quản lý hóa đơn xuất</div>
                        <div class="col-md-4 text-right">
                            <a href="http://localhost:51363/Admin/HDXes/Create" class="btn btn-primary" onclick="themdonhang()">Thêm hóa đơn xuất</a>                                           
                        </div>
                    </div>
                        <div class="panel-body">
                        <div class="table-responsive">
                            <h3><span id="message"></span></h3>
                            <table class="table table-bordered table-striped" id="example" style="width:100%">
                                <thead>
                                    <tr class="info">
                                        <th style="text-align:center">
                                            @*@Html.DisplayNameFor(model => model.MaKH)*@
                                            <label>Mã khách hàng</label>
                                        </th>
                                        <th style="text-align:center">
                                            @*@Html.DisplayNameFor(model => model.MaSP)*@
                                            <label>Mã sản phẩm</label>
                                        </th>
                                        <th style="text-align:center">
                                            @*@Html.DisplayNameFor(model => model.SL)*@
                                            <label>Số lượng</label>
                                        </th>
                                        <th style="text-align:center">
                                            @*@Html.DisplayNameFor(model => model.NgayBan)*@
                                            <label>Ngày bán</label>
                                        </th>
                                        <th style="text-align:center">
                                            @*@Html.DisplayNameFor(model => model.Tongtien)*@
                                            <label>Tổng tiền</label>
                                        </th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MaKH)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MaSP)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SL)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NgayBan)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Tongtien)
                                            </td>
                                            <td>
                                                <a class="btn btn-warning" href="http://localhost:51363/Admin/HDXes/Edit/@item.MaHD"><i class="glyphicon glyphicon-pencil"></i></a>
                                            </td>
                                            <td><a class="btn btn-info" href="http://localhost:51363/Admin/HDXes/Details/@item.MaHD"><i class="glyphicon glyphicon-eye-open"></i></a></td>
                                            <td><a class="btn btn-danger" href="http://localhost:51363/Admin/HDXes/Delete/@item.MaHD"><i class="glyphicon glyphicon-trash"></i></a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>